<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_blue">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:layout_marginBottom="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:orientation="horizontal"
            android:padding="7dp">


                <LinearLayout
                    android:id="@+id/serviceSummaryLayout"
                    android:layout_margin="5dp"
                    android:background="@color/myFav"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="80dp"
                    android:layout_height="80dp">


                    <ImageView
                        android:id="@+id/ivProfilePicMin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/layout_bg_l"
                            android:orientation="vertical"
                            android:padding="7dp">


                            <TextView
                                android:id="@+id/textView_student_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="First Name"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                            <TextView
                                android:id="@+id/textView_student_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Last Name"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                            <TextView
                                android:id="@+id/textView_student_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Student No"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


                        </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>