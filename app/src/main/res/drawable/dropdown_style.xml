<?xml version="1.0" encoding="utf-8"?>
<layer-list android:opacity="transparent" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:centerColor="#FFFFFF" android:centerY="0.2" android:endColor="#00FFFFFF" android:startColor="@color/pureWhite" />
                    <stroke android:width="1dp" android:color="@color/main_yellow" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item
                android:right="4dp"
                android:gravity="center|right"
                android:drawable="@drawable/dropdown"/>

        </layer-list>
    </item>

</layer-list>
